// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Existing Dockerfile",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "../Dockerfile"
	},

	// Add runArgs to match docker run -it --ipc=host --gpus all
	"runArgs": [
		"--ipc=host", 
		"--gpus=all", 
		"--runtime=nvidia",
		"--device=/dev/dri:/dev/dri"
	],
	
	// Environment variables for X11 display and NVIDIA
	"remoteEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"NVIDIA_VISIBLE_DEVICES": "all",
		"NVIDIA_DRIVER_CAPABILITIES": "compute,utility,graphics",
		"QT_X11_NO_MITSHM": "1"
	},
	
	// Volume mounts for X11 forwarding and SSH authentication
	"mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.Xauthority,target=/root/.Xauthority,type=bind,consistency=cached",
		"source=/dev/shm,target=/dev/shm,type=bind",
		"source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,readonly"
	],

	// Post-create commands to verify setup
	"postCreateCommand": "xhost +local:docker || true && echo 'X11 forwarding setup' && nvidia-smi && python -c 'import cv2; print(\"OpenCV version:\", cv2.__version__); print(\"GTK support:\", \"GTK\" in cv2.getBuildInformation())' && chmod 600 /root/.ssh/id_rsa || true",

	// Set container capabilities for X11 and NVIDIA
	"capAdd": ["SYS_ADMIN"],
	
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"GitHub.vscode-pull-request-github"
			],
			"settings": {
				"python.defaultInterpreterPath": "/opt/conda/bin/python"
			}
		}
	}
}
